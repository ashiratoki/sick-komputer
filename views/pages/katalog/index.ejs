<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Katalog</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' href='style.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <%- include ('../components/navbar.ejs') %>
        <h1 class="text-center mt-5">Katalog Produk (<%= katalog.length %> Barang)</h1>
        <div class="row justify-content-center">
            <form action="/katalog">
                <div class="input-group">
                    <div class="form-outline">
                        <input type="text" id="form1" name='keyword' class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Search
                    </button>
                </div>
            </form>
        </div>

        <hr>
        <div class="row justify-content-center">
            <% if (katalog.length> 0){ %>
                <% katalog.forEach (function(katalog) { %>
                    <div class="col-lg-3 py-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <img class="card-img-top"
                                    src="data:image/<%=katalog.img.contentType%>;base64,<%=katalog.img.data.toString('base64')%>">
                                <h5 class="card-title"><a href="/katalog/<%= katalog._id %>">
                                        <%= katalog.namaBarang %>
                                </h5></a>
                                <p class="card-text text-muted">
                                    <%= katalog.jenisBarang %>
                                </p>
                                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed
                                    elementum,
                                    lorem a hendrerit consectetur, mauris elit placerat risus, facilisis efficitur dolor
                                    tortor non diam.</p>
                                <p class="card-text text-muted">Rp 5.000.000</p>
                                <a class="btn btn-success"
                                    href="/katalog/update/<%= katalog._id %>/<%= katalog.id %>/<%= katalog.namaBarang %>/<%= katalog.jenisBarang %>/<%= katalog.password %>">Update</a>
                                <a class="btn btn-danger" href="/katalog/hapus/<%= katalog._id %>">Hapus</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>Data Katalog kosong</p>
                            <% } %>
        </div>

        <div class="container mb-5">
            <div class="row">
                <div class="col text-center">
                    <a class='btn btn-primary mx-auto' style='padding: 15px; font-size: large;'
                        href="katalog/create">Tambah Barang</a>
                </div>
            </div>
        </div>

        <%- include ('../components/footer') %>

</body>

</html>